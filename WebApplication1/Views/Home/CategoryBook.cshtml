@model IEnumerable<WebApplication1.Models.Book>

@{
    ViewBag.Title = "CategoryBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategoriler</h2>

<br />
<table class="table">
    <tr>
        <th>
            <h2>Kategori</h2>
        </th>
        <th>
            <h2>Kitap</h2>
        </th>
        <th>
            <h2>Resim</h2>
        </th>
        <th>
            <h2>Yazar</h2>
        </th>
        <th>
            <h2>Yayınevi</h2>
        </th>
        <th>
            <h2>Kitap Hakkında</h2>
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.cname)&nbsp;&nbsp;
        </td>
        <td>
            <a href="/Home/BookDetails/@item.book_id"> @Html.DisplayFor(modelItem => item.b_name)</a>&nbsp;
</td>
        <td>
            <a href="/Home/BookDetails/@item.book_id">  <img src="@item.photo" width="150" /></a>&nbsp;&nbsp;&nbsp;
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.writer)&nbsp;&nbsp;
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.p_house)&nbsp;&nbsp;
        </td>
        @if (item.aboutbook.Length > 15)
        {
            <td>
                @Html.Raw(item.aboutbook.Substring(0, 15)) ...
            </td>

        }
        else
        {
            <td>
                @Html.DisplayFor(modelItem => item.aboutbook)
            </td>
        }
       
        
    </tr>
}

</table>
