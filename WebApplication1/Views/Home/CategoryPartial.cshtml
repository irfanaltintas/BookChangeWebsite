@{ 
    Layout = null;
}
<div class="box categories">
    <h2>Kategoriler <span></span></h2>
    <div class="box-content">
        @foreach (var item in Model)
        {
            <ul>
                <li><a href="/Home/CategoryBook/@item.category_id">@item.cname (@item.Books.Count())</a></li>
            </ul>
        }
        
    </div>
</div>



