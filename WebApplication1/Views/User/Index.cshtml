@model WebApplication1.Models.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            <h2>İsim</h2>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.u_name)
        </dd>

        <dt>
            <h2>Soyisim</h2>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.u_surname)
        </dd>

        <dt>
            <h2>Email</h2>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            <h2>Şifre</h2>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password)
        </dd>

        <dt>
            <h2>Resim</h2>
        </dt>

        <dd>
            <img src="@Model.photo" class="img-circle img-responsive" alt="@Model.u_name" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Düzenle", "Edit", new { id = Model.user_id }) |   
</p>
<br />

<h2>@Model.u_name Tarafından Eklenen Kitaplar</h2>

<div>
    @foreach (var item in Model.Books.ToList().Take(3))
    {
        <br />
        <a href="/Home/BookDetails/@item.book_id"><img src="@item.photo" class="img-circle" width="150" /><br /></a>@item.b_name
    }
</div>

